<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/page_padding"
    app:behavior_draggable="true"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    tools:context=".ui.mypage.ContactUsFragment">

    <View
        android:id="@+id/close_handle"
        android:layout_width="50dp"
        android:layout_height="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#4A4A4A" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/hint_contact_us_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_title"
        android:enabled="false"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/close_handle" />

    <EditText
        android:id="@+id/et_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/border_corner8_gray"
        android:hint="@string/hint_contact_us_title"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_send"
        app:layout_constraintEnd_toStartOf="@id/btn_send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_send"
        android:importantForAutofill="no" />

    <Spinner
        android:id="@+id/sp_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_corner8_gray"
        android:gravity="center_horizontal"
        android:minHeight="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_title" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_corner8_gray"
        android:gravity="top|start"
        android:hint="@string/hint_contact_us_content"
        android:importantForAutofill="no"
        android:inputType="textImeMultiLine"
        app:layout_constraintHeight_percent="0.77"
        app:layout_constraintVertical_bias="0"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/sp_category"
        app:layout_constraintStart_toStartOf="@id/sp_category"
        app:layout_constraintTop_toBottomOf="@+id/sp_category" />

</androidx.constraintlayout.widget.ConstraintLayout>